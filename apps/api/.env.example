MONGO_URL=mongodb://localhost:27017
JWT_SECRET=dev-secret-change-me
CLIENT_ORIGIN=http://localhost:5173
PORT=4000

# Auto punch-out time (HH:mm, 24h). Defaults to 08:30 if unset
AUTO_PUNCH_OUT_TIME=08:30

# SMTP (optional, for email notifications)
# Configure these to enable email sending. If unset, emails are skipped.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
# true for port 465, false otherwise
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
# The From header used for outgoing emails
SMTP_FROM=HRMS <no-reply@yourdomain.com>

# Enable SMTP debug logging (true/false)
SMTP_DEBUG=false
