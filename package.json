{
  "name": "hrms-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*"
  ],
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm:dev -w apps/api\" \"npm:dev -w apps/web\"",
    "build": "npm run --if-present -w apps/api build && npm run --if-present -w apps/web build",
    "start": "npm run start -w apps/api",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@types/xlsx": "^0.0.35",
    "clsx": "^2.1.1",
    "lucide-react": "^0.541.0",
    "mongoose-field-encryption": "^7.0.1",
    "multer": "^2.0.2",
    "react-hook-form": "^7.63.0",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "concurrently": "^9.0.0",
    "cross-spawn": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "tree-kill": "^1.2.2",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "in.rushabh.hrms",
    "productName": "HRMS",
    "files": [
      "electron/**/*",
      "apps/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "HRMS"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build",
      "category": "Utility"
    }
  }
}
